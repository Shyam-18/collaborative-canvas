{
  "compilerOptions": {
    "rootDir": "./server",
    "outDir": "./dist",
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    "types": ["node"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "isolatedModules": false,
    "verbatimModuleSyntax": false,
    "sourceMap": true
  },
  "include": ["server/**/*.ts"],
  "exclude": ["client", "node_modules"]
}
